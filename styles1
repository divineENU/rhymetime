/* Reset default margins and paddings */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Ensure body fills the screen and centers content */
body {
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f0f8ff; /* Light background */
}

/* Style for the large button */
.large-button {
    padding: 20px 50px; /* Large padding for a big button */
    font-size: 24px; /* Large text size */
    font-weight: bold;
    color: white;
    background-color: #ff5733; /* Bright orange color */
    border: none;
    border-radius: 10px; /* Rounded corners */
    cursor: pointer;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.3); /* Subtle shadow for depth */
    transition: transform 0.2s ease, background-color 0.3s ease; /* Smooth hover effect */
}

/* Hover effect for the button */
.large-button:hover {
    background-color: #c70039; /* Darker shade on hover */
    transform: scale(1.1); /* Slightly enlarges on hover */
}

/* Active (pressed) effect for the button */
.large-button:active {
    transform: scale(1); /* Resets size when clicked */
}